@using SystemeLocation.Models.Voiture
@using SystemeLocation.Entities;

@model VoitureAddNoteVM

@{
    ViewData["Title"] = "Add note to Car";
}

<h1>Add note to Car</h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Back", "Details", new { succursaleId = @ViewBag.succursaleId, voitureId = @ViewBag.voitureId }, new { @class = "btn btn-secondary" })
</div>

<form asp-action="AddNote" asp-route-succursaleId="@ViewBag.succursaleId" asp-route-voitureId="@ViewBag.voitureId">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note" class="control-label required"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group mt-2 mb-2">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}