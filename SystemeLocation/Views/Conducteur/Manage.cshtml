@using SystemeLocation.Models.Conducteur;
@using SystemeLocation.Entities;

@model IEnumerable<ConducteurManageVM>

@{
    ViewData["Title"] = "Manage Drivers";
}

<h1>Drivers list</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbLocations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @if (item.LastLocation is null)
                {
                    <td>
                        <span>N/A</span>
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.LastLocation)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.NbLocations)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>