@using SystemeLocation.Models.Location
@using SystemeLocation.Entities;

@model LocationCloseVM

@{
    ViewData["Title"] = "Close a Rental";
}

<h1>Close a Rental</h1>

<div class="mt-2 mb-2">
    @Html.ActionLink("Back", "Manage", new { succursaleId = @ViewBag.succursaleId }, new { @class = "btn btn-secondary" })
</div>

<form asp-action="Close" asp-route-succursaleId="@ViewBag.succursaleId" asp-route-locationId="@ViewBag.locationId">
    <h4 class="mt-2">Closing information</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClosingTime" class="control-label required"></label>
                <input asp-for="ClosingTime" class="form-control" />
                <span asp-validation-for="ClosingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group mt-2 mb-2">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
</form>